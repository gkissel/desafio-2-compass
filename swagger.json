            "example": "url_da_imagem"
          },
          "name": {
            "type": "string",
            "example": "nome_do_filme"
          },
          "description": {
            "type": "string",
            "example": "descricao_do_filme"
          },
          "actors": {
            "type": "string",
            "example": ["brad pit", "Ryan Goslin"]
          },
          "genre": {
            "type": "string",
            "example": "genero_do_filme"
          },
          "release_date": {
            "type": "string",
            "example": "03/06/2024"
          }
        },
        "required": [
