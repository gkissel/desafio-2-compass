            "type": "string",
            "example": "03/06/2024"
          },
          "sessions": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "example": []
          }
        },
        "required": [
          "id",
          "image",
          "name",
          "description",
          "actors",
          "genre",
          "release_date"
        ]
      },
